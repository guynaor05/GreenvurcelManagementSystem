            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Customer ID" Binding="{Binding CustomerID}"/>
                <DataGridTextColumn Width="*" Header="Product Name" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Width="*" Header="Category Name" Binding="{Binding CategoryName}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center">
            <StackPanel Margin="10 5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ID" Style="{StaticResource RegistrationPart}" FontSize="16"/>
                </StackPanel>
                <TextBox x:Name="CustomerID" Style="{StaticResource TextBox}" BorderBrush="Black" FontSize="16"/>
            </StackPanel>
            <StackPanel Margin="10 5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Product Name" Style="{StaticResource RegistrationPart}" FontSize="16"/>
                </StackPanel>
                <TextBox x:Name="ProductName" Style="{StaticResource TextBox}" FontSize="16" BorderBrush="Black"/>
            </StackPanel>
            <StackPanel Margin="10 5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Category" Style="{StaticResource RegistrationPart}" FontSize="16"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="Category" Style="{StaticResource TextBox}" BorderBrush="Black"/>
                    <Button x:Name="AddProduct" Margin="10 0 0 0" Background="#FF383232" BorderBrush="#FF383232" Click="AddProduct_Click">
