                <Button x:Name="ResetButton" Content="Reset" Foreground="White" Margin="10 0 0 0" Background="#FF383232" BorderBrush="#FF383232" Click="ResetButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
